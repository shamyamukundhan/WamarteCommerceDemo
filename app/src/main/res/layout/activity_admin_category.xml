<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_design"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="@string/add_new_product"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26sp"/>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_below="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/t_shirts"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/tshirts"
        app:tint="@color/purple_500"
        android:contentDescription="@string/app_name"

        />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/sports"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"

            />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/female_dresses"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"

            />
        <ImageView
            android:id="@+id/sweaters"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/sweather"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            app:tint="@color/purple_500"
             android:contentDescription="@string/app_name"
            />
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />
        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_below="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/baby"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/baby"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/books"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/books"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/bedroom"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bedroom"
            app:tint="@color/purple_500" />

        <ImageView
            android:id="@+id/umbrella"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/umbrella"
            android:layout_marginStart="16dp"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5_category_layout"
        android:layout_below="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/music"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/bathtub"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/bathtub"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/chair"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/chair"
            app:tint="@color/purple_500" />

        <ImageView
            android:id="@+id/giftcard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/giftcard"
            android:layout_marginStart="16dp"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6_category_layout"
        android:layout_below="@+id/linear5_category_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/camera"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/brush"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/brush"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/toys"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/toys"
            app:tint="@color/purple_500" />

        <ImageView
            android:id="@+id/sim"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sim_card"
            android:layout_marginStart="16dp"
            app:tint="@color/purple_500"
            android:contentDescription="@string/app_name"
            />

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/admin_logout_btn"
        android:id="@+id/check_orders_btn"
        android:background="@color/purple_500"
        android:text="@string/check_new_orders"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/purple_500"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>